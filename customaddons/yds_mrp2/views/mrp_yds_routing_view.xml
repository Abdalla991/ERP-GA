<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

 
 <record id="mrp.mrp_routing_workcenter_tree_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="arch" type="xml">
                <tree string="Routing Work Centers" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="company_id" invisible="1"/>
                    <field name="workcenter_id" />
                    <field name="time_cycle"  widget="float_time" string="Duration (minutes)" sum="Total Duration" width="1.5"/>
                </tree>
            </field>
        </record>



            </data>
</odoo>